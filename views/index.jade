!!! 5

html(ng-app="myApp", lang="en")
  head
    // Lets set up our page a bit.
    // ==========================================================================
    title Angular Coffee Express
    meta(http-equiv="Content-Type",content="text/html; charset=UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="A simple template with Angular JS running through Express with Connect-Assets and a focus on Coffee Script for scripting, stylus for templating, and Stylus for stylesheets.")
    meta(name="author", content="Andrew Hobden")

    // HTML5 shim, because IE's are horrible.
    //if lt IE 9
      script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
      != js("components/angular-ui/build/angular-ui-ieshiv.min")

    // Include our Stylesheets. See /assets/css.
    // ==========================================================================
    != css("css/app")

    // The content of our page.
    // ==========================================================================
    body
      // Containers provide us with fluid layouts. If you resize the browser window, it follows!
      .container
        // A floating navbar, snazzy!
        .three.columns.sidebar
          nav
            h3#logo Angular Coffeee Express
            ul
              li
                a(ng-href='/userpage') Users
              li
                a(ng-href='/view1') View 1
              li
                a(ng-href='/view2') View 2

        .twelve.columns.offset-by-one.content(ng-view)
          // Loading Screen
          // ========================================================================
          p Loading the Application...

      // Demonstrating filters and services with a simple version example.
      .container
        .three.columns.offset-by-fourteen
          App Version: v
          span(app-version)

  // Include our Scripts. See /assets/js.
  != js("js/app")
